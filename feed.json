---
layout: null
---
{
    "version": "https://jsonfeed.org/version/1",
    "title": {{ site.title | smartify | jsonify }},
    {% if site.description %}"description": {{ site.description | smartify | jsonify }},{% endif %}
    "home_page_url": "{{ site.url }}/",
    "feed_url": "{{ site.url }}/feed.json",
    "icon": "{{ site.url }}/icons/apple-touch-icon-180x180.png",
    "favicon": "{{ site.url }}/icons/favicon-96x96.png",
    "expired": false,
    "author": {
        "name": "Sarah Reichelt"
    },
    "items": [
{% for post in site.posts %}
        {
            "id": "{{ post.id }}",
            "title": {{ post.title | smartify | jsonify }},
            "content_html": {{ post.content | jsonify }},
            "url": "{{ site.url }}{{ post.url }}",
            "summary": {{ post.excerpt | smartify | jsonify }},
            "date_published": "{{ post.date }}",
            "tags": ["{{ post.tags | sort | join: '", "' }}"]
        }{% unless forloop.last == true %},{% endunless %}
{% endfor %}
    ]
}
